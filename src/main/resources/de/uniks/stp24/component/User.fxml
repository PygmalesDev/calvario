<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>


<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://java.sun.com/JSP/Page"
         fx:controller="de.uniks.stp24.component.UserComponent">
      <ImageView fx:id="avatarImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
      <Text fx:id="usernameText" strokeType="OUTSIDE" strokeWidth="0.0" text="\%PlayerNickname">
         <HBox.margin>
            <Insets left="10.0" right="20.0" />
         </HBox.margin>
      </Text>
   <padding>
      <Insets bottom="7.0" top="7.0" />
   </padding>
</fx:root>
