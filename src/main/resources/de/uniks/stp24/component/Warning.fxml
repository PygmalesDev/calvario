            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="You are about to delete:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text fx:id="gameName" fill="#278622" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Press Confirm to delete permanently">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
