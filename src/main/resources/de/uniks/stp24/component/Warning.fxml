                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" style="-fx-background-color: #008000;" text="Cancel">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#deleteGame" style="-fx-background-color: #FF0000;" text="Confirm">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</fx:root>
