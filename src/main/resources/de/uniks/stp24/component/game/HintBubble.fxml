<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<fx:root type="javafx.scene.layout.Pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="de.uniks.stp24.component.game.HintBubbleComponent">
   <children>
      <ImageView fx:id="captainLogo" fitHeight="100.0" fitWidth="100.0" layoutX="1.0" layoutY="14.0" onMouseEntered="#scaleUp" onMouseExited="#scaleDown" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../assets/logos/captainWebjaw.png" />
         </image>
      </ImageView>
      <Pane fx:id="backgroundBubble" layoutX="83.0" layoutY="-7.0" prefHeight="113.0" prefWidth="203.0" styleClass="captainPane" />
      <TextArea fx:id="captainText" disable="true" editable="false" layoutX="93.0" prefHeight="100.0" prefWidth="188.0" styleClass="captainText" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button fx:id="closeButton" layoutX="255.0" mnemonicParsing="false" onAction="#close" prefHeight="12.0" prefWidth="28.0" styleClass="closeButtonHint" />
   </children>
   <stylesheets>
      <URL value="@../../style/styles.css" />
      <URL value="@../../style/ingameButtons.css" />
   </stylesheets>
</fx:root>
