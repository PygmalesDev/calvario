<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.image.Image?>
<fx:root onKeyPressed="#showFlag" onMouseEntered="#showRudder" onMouseExited="#unshowRudder" onMouseMoved="#showRudder" type="Pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.game.IslandComponent">
   <ImageView fx:id="islandImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
   <Image url="@../../icons/isle.jpeg" />
   </ImageView>
   <ImageView fx:id="rudderImage" fitHeight="50.0" fitWidth="42.0" layoutX="4.0" layoutY="4.0" onMouseClicked="#showIslandOverview" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../icons/islands/selection_wheel.png" />
      </image>
   </ImageView>
   <StackPane fx:id="flagPane" layoutX="34.0" maxHeight="16.0" maxWidth="16.0" minHeight="16.0" minWidth="16.0" prefHeight="16.0" prefWidth="16.0" style="-fx-background-color: Transparent;" visible="false">
      <ImageView fx:id="flagImage" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../../test/911.png" />
      </ImageView>
   </StackPane>
</fx:root>
