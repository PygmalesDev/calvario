<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_CENTER" prefWidth="270.0" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.game.fleetManager.BlueprintsDetailsComponent">
    <Label fx:id="shipType" styleClass="tooltip-title" text="ShipType" textAlignment="CENTER" VBox.vgrow="ALWAYS">
        <font>
            <Font size="15.0" />
        </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </Label>
    <HBox alignment="CENTER" spacing="20.0" translateX="-5.0">
        <Label styleClass="tooltip-subtitle" text="%consumes" translateX="-10.0" />
        <Label styleClass="tooltip-subtitle" text="%damage" />
    </HBox>
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <ListView fx:id="consumed" maxHeight="100.0" maxWidth="70.0" minHeight="60.0" minWidth="75.0" prefHeight="60.0" prefWidth="80.0" styleClass="tooltip-list-view">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin></ListView>
        <ListView fx:id="damage" maxHeight="80.0" maxWidth="100.0" minHeight="60.0" minWidth="75.0" prefHeight="60.0" prefWidth="100.0" styleClass="tooltip-list-view" />
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
    </HBox>
    <stylesheets>
        <URL value="@../../../style/fleetManager.css" />
    </stylesheets>
   <padding>
      <Insets bottom="20.0" left="10.0" right="40.0" top="10.0" />
   </padding>
</fx:root>
