<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefWidth="280.0" spacing="5.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.game.fleetManager.FleetComponent">
   <HBox>
      <VBox alignment="CENTER" fillWidth="false" prefWidth="225.0">
         <children>
            <Label fx:id="fleetNameLabel" text="FleetName">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox fillHeight="false" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <ImageView fx:id="fleetImageview" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="sizeLabel" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Button fx:id="editFleetButton" mnemonicParsing="false" onAction="#editFleet" prefHeight="30.0" prefWidth="30.0" styleClass="fleet-edit-button" />
            <Button fx:id="deleteFleetButton" mnemonicParsing="false" onAction="#deleteFleet" prefHeight="30.0" prefWidth="30.0" styleClass="fleet-delete-button" />
         </children>
      </VBox>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </HBox>
   <stylesheets>
      <URL value="@../../../style/ingameButtons.css" />
      <URL value="@../../../style/fleetManager.css" />
   </stylesheets>
</fx:root>
