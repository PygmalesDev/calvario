                        <font>
                            <Font size="35.0" />
                        </font>
                    </Text>
                </HBox>
                <VBox alignment="TOP_RIGHT" fillWidth="false" HBox.hgrow="NEVER">
                    <Button fx:id="closeFleetManagerButton" minHeight="50.0" minWidth="50.0" mnemonicParsing="false" onAction="#close" styleClass="closeButton" />
