                    </VBox>
                    <VBox fx:id="shipsVBox" fillWidth="false" prefHeight="450.0" styleClass="fleet-manager-list-view-background" translateY="50.0">
                        <HBox>
                            <Button mnemonicParsing="false" onAction="#showBlueprints" styleClass="leftTriangleButton" text="back" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ships" />
                        </HBox>
                        <ListView fx:id="shipsListView" styleClass="fleet-manager-list-view" prefHeight="280.0" prefWidth="310.0" translateX="21.0" translateY="-9.0" />
                    </VBox>
                </StackPane>
            <padding>
               <Insets top="50.0" />
            </padding>
            </HBox>
        </VBox>
    </StackPane>
   <stylesheets>
      <URL value="@../../../style/ingameButtons.css" />
      <URL value="@../../../style/fleetManager.css" />
   </stylesheets>
