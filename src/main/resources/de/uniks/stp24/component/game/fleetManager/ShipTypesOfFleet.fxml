<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxWidth="290.0" prefWidth="290.0" spacing="5.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.game.fleetManager.ShipTypesOfFleetComponent">
   <HBox>
      <Label fx:id="typeLabel" text="Type"/>
      <Button fx:id="decrementSizeButton" mnemonicParsing="false" onAction="#decrementSize" text="-"/>
      <Label fx:id="sizeLabel" text="size"/>
      <Button fx:id="incrementSizeButton" mnemonicParsing="false" onAction="#incrementSize" text="+"/>
   </HBox>
   <HBox alignment="CENTER_RIGHT" spacing="5.0">
      <Button fx:id="buildShipButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
              onAction="#buildShip" text="build"/>
   </HBox>
   <padding>
      <Insets bottom="25.0" left="15.0" right="10.0" top="20.0" />
   </padding>
</fx:root>
