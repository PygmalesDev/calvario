<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="162.0" prefWidth="212.0" type="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.component.menu.LobbySettingsComponent">
   <padding>
      <Insets bottom="50.0" top="-60.0" />
   </padding>
   <Button fx:id="selectEmpireButton" layoutX="62.0" layoutY="41.0" mnemonicParsing="false" onAction="#selectEmpire" prefHeight="60.0" prefWidth="110.0" styleClass="lobbyButtonSelectEmpire" textAlignment="CENTER">
      <font>
         <Font size="18.0" />
      </font>
      <graphic>
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="EnteredGameButtonText" text="%select.empire" />
      </graphic>
   </Button>
   <Button fx:id="leaveLobbyButton" layoutX="3.0" layoutY="110.0" mnemonicParsing="false" onAction="#leaveLobby" prefHeight="50.0" prefWidth="110.0" styleClass="lobbyButtonLeave">
      <font>
         <Font size="18.0" />
      </font>
      <graphic>
         <Text id="EnteredGameButton" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="EnteredGameButtonText" text="%leave" />
      </graphic>
   </Button>
   <Button fx:id="readyButton" layoutX="119.0" layoutY="110.0" mnemonicParsing="false" onAction="#ready" prefHeight="50.0" prefWidth="110.0" styleClass="lobbyButtonReadyNot">
      <font>
         <Font size="18.0" />
      </font>
      <graphic>
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="EnteredGameButtonText" text="%ready.lobby" />
      </graphic>
   </Button>
</fx:root>
