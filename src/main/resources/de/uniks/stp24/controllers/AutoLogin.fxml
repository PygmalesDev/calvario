         <font>
            <Font name="Calibri" size="96.0"/>
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/logos/SpiderbyteLogoTransparent.png"/>
         </ImageView>
         <ImageView fitHeight="325.0" fitWidth="345.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../assets/logos/DeadBirdsLogoTransparent.png"/>
         </ImageView>
      </HBox>
      <Label onKeyPressed="#keyPressed" text="%press.any.key">
         <font>
            <Font size="36.0"/>
         </font>
      </Label>
   </VBox>
