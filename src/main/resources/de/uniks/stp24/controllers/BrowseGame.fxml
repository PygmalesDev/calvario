<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="860.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controllers.BrowseGameController">
   <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="630.0" prefWidth="800.0">
         <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="40.0" prefWidth="800.0"
               style="-fx-background-color: Black;">
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%calvario.browseGame">
               <font>
                  <Font size="16.0"/>
               </font>
            </Text>
         </HBox>
         <VBox alignment="CENTER" prefHeight="570.0" prefWidth="800.0" styleClass="cardBackground">
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="530.0" prefWidth="750.0"
                        style="-fx-border-color: #000000" styleClass="transparentBackground">
               <HBox prefHeight="400.0" prefWidth="534.0" AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <AnchorPane prefHeight="398.0" prefWidth="250.0" style="-fx-border-color: #000000;"
                              HBox.hgrow="ALWAYS">
                     <VBox fx:id="browseGameVBoxButtons" alignment="CENTER" prefHeight="398.0"
                           prefWidth="250.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <Button fx:id="new_game_b" mnemonicParsing="false" onAction="#newGame"
                                   prefHeight="42.0" prefWidth="186.0" text="%new.game"/>

                        </HBox>
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <VBox alignment="CENTER" prefHeight="77.0" prefWidth="178.0">
                              <Button fx:id="load_game_b" mnemonicParsing="false" onAction="#loadGame"
                                      prefHeight="42.0" prefWidth="186.0" text="%load"/>
                           </VBox>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <Button fx:id="edit_game_b" mnemonicParsing="false" onAction="#editGame"
                                   prefHeight="42.0" prefWidth="186.0" text="%edit.game"/>

                        </HBox>
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <Button fx:id="del_game_b" mnemonicParsing="false" onAction="#deleteGame"
                                   prefHeight="42.0" prefWidth="186.0" text="%delete"/>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <Button fx:id="edit_acc_b" mnemonicParsing="false" onAction="#editAccount"
                                   prefHeight="42.0" prefWidth="186.0" text="%edit.account"/>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="230.0">
                           <Button fx:id="log_out_b" mnemonicParsing="false" onAction="#logOut"
                                   prefHeight="42.0" prefWidth="186.0" text="%log.out"/>
                        </HBox>
                     </VBox>
                  </AnchorPane>
                  <AnchorPane prefHeight="442.0" prefWidth="500.0" style="-fx-border-color: #000000;"
                              HBox.hgrow="ALWAYS">
                     <VBox fx:id="browseGameVBoxList" alignment="CENTER" layoutX="30.0" layoutY="1.0"
                           prefHeight="396.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
                           AnchorPane.topAnchor="0.0">
                        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="233.0" styleClass="menuLogic">
                           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%games"/>
                        </HBox>
                        <ListView fx:id="gameList" prefHeight="450.0" prefWidth="233.0"/>
                        <HBox maxHeight="-Infinity" prefHeight="20.0" prefWidth="200.0"
                              styleClass="menuLogic"/>
                     </VBox>
                  </AnchorPane>
               </HBox>
               <StackPane fx:id="warningWindowContainer" alignment="BOTTOM_CENTER" prefHeight="400.0"
                          prefWidth="450.0" visible="false" AnchorPane.bottomAnchor="70.0"
                          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"
                          AnchorPane.topAnchor="70.0"/>
            </AnchorPane>
         </VBox>
         <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="20.0" prefWidth="800.0"
               style="-fx-background-color: black;"/>
      </VBox>
   </HBox>
</AnchorPane>
