<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controllers.EditAccController">
   <HBox fx:id="editAccHBox" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <AnchorPane prefHeight="200.0" prefWidth="400.0">
         <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Your Account">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Text>
            <ImageView fx:id="avatarImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="15.0">
               <Button fx:id="saveChangesButton" mnemonicParsing="false" onAction="#saveChanges" prefHeight="30.0" prefWidth="150.0" text="Save Changes" visible="false">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
               <Button fx:id="cancelChangesButton" mnemonicParsing="false" onAction="#cancelChanges" prefHeight="30.0" prefWidth="150.0" text="Cancel" visible="false">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="15.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username:">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Text>
               <TextField fx:id="usernameInput" disable="true">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="15.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Text>
               <TextField fx:id="passwordInput" disable="true">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </HBox>
            <Text fx:id="errorLabelEditAcc" strokeType="OUTSIDE" strokeWidth="0.0" text="WarningText">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
         </VBox>
      </AnchorPane>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="400.0" prefWidth="200.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <ToggleButton fx:id="changeUserInfoButton" mnemonicParsing="false" onAction="#changeUserInfo" prefHeight="30.0" prefWidth="150.0" text="Edit Account">
               <font>
                  <Font size="15.0" />
               </font>
            </ToggleButton>
            <Button fx:id="deleteUserButton" mnemonicParsing="false" onAction="#deleteUser" prefHeight="30.0" prefWidth="150.0" text="Delete User">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="150.0" text="Go Back">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </VBox>
      </AnchorPane>
   </HBox>
   <StackPane fx:id="warningScreenContainer" prefHeight="200.0" prefWidth="300.0" visible="false" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0" />
</AnchorPane>
