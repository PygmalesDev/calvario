            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="721.0" style="-fx-background-color: Black;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%calvario.login">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Text>
            </HBox>
            <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="721.0" styleClass="cardBackground">
               <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="35.0">
                  <ToggleButtonGroup prefHeight="60.0" prefWidth="90.0" selectionType="SINGLE">
                     <ToggleButton fx:id="enToggleButton" contentDisplay="CENTER" onAction="#setEn" prefHeight="50.0" prefWidth="45.0" text="EN" />
                     <ToggleButton fx:id="deToggleButton" contentDisplay="CENTER" onAction="#setDe" prefHeight="50.0" prefWidth="45.0" text="DE" />
                  </ToggleButtonGroup>
               </HBox>
               <ImageView fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@../assets/logos/Calvario.png" />
