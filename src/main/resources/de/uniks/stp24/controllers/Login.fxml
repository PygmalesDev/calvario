<AnchorPane fx:id="backgroundAnchorPane" prefHeight="860.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controllers.LoginController">
   <HBox alignment="CENTER" prefHeight="860.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="660.0" prefWidth="550.0">
         <VBox prefHeight="200.0" prefWidth="550.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="721.0" style="-fx-background-color: Black;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%calvario.login">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Text>
            </HBox>
            <VBox fx:id="cardBackgroundVBox" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="721.0" styleClass="cardBackground">
               <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="35.0">
                  <ToggleButtonGroup prefHeight="60.0" prefWidth="90.0" selectionType="SINGLE">
                     <ToggleButton fx:id="enToggleButton" contentDisplay="CENTER" onAction="#setEn" prefHeight="50.0" prefWidth="60.0" styleClass="languageButton" text="EN" />
                     <ToggleButton fx:id="deToggleButton" contentDisplay="CENTER" onAction="#setDe" prefHeight="50.0" prefWidth="60.0" styleClass="languageButton" text="DE" />
                  </ToggleButtonGroup>
               </HBox>
               <ImageView fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                  <Image fx:id="calvarioLogoRegister" url="@../assets/logos/Calvario.png" />
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
               </ImageView>
               <VBox alignment="CENTER" prefHeight="160.0" prefWidth="100.0">
                  <HBox alignment="CENTER" prefHeight="500.0" prefWidth="35.0" spacing="5.0">
                     <Pane>
                        <children>
                           <TextField fx:id="usernameInput" alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="300.0" promptText="%username" styleClass="inputField">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </TextField>
                           <PasswordField fx:id="passwordInput" alignment="CENTER" layoutX="14.0" layoutY="79.0" prefHeight="40.0" prefWidth="300.0" promptText="%password" styleClass="inputField">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </PasswordField>
                           <TextField fx:id="showPasswordText" alignment="CENTER" layoutX="14.0" layoutY="79.0" managed="false" prefHeight="40.0" prefWidth="300.0" promptText="%password" styleClass="inputField">
                              <font>
                                 <Font size="15.0" />
                              </font>
                           </TextField>
                           <ToggleButton fx:id="showPasswordToggleButton" layoutX="324.0" layoutY="87.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="eyeButton">
                              <graphic>
                                 <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
                              </graphic>
                           </ToggleButton>
                        </children>
                     </Pane>
                  </HBox>
               </VBox>
               <HBox alignment="BOTTOM_CENTER" prefHeight="250.0" prefWidth="550.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="250.0" prefWidth="350.0">
                        <Text fx:id="errorLabel" strokeType="OUTSIDE" strokeWidth="0.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Text>
                        <CheckBox fx:id="rememberMeBox" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="rememberMe" text="%remember.me">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </CheckBox>
                        <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="250.0" styleClass="actionButton" text="%login">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/enter.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="signupButton" mnemonicParsing="false" onAction="#signup" prefHeight="40.0" prefWidth="250.0" styleClass="actionButton" text="%register">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="15.0" />
                           </VBox.margin>
                           <graphic>
                              <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/account.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="licensesButton" alignment="CENTER" mnemonicParsing="false" onAction="#showLicenses" prefHeight="40.0" prefWidth="100.0" styleClass="licensesButton" text="%licenses">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <padding>
                              <Insets top="500.0" />
                           </padding>
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/licenses.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </VBox>
                     <Pane fx:id="captainContainer" prefHeight="0.0" prefWidth="0.0" />
                  </children>
               </HBox>
            </VBox>
            <HBox alignment="CENTER" prefHeight="20.0" prefWidth="550.0" style="-fx-background-color: black;" />
         </VBox>
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
      </AnchorPane>
   </HBox>
</AnchorPane>
