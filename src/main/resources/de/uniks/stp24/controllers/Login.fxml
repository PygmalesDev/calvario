                     <PasswordField fx:id="passwordInput" alignment="CENTER" prefHeight="40.0" prefWidth="300.0" promptText="%password" styleClass="inputField">
                        <font>
                           <Font size="15.0" />
                        </font>
                        <HBox.margin>
                           <Insets top="15.0" />
                        </HBox.margin>
                     </PasswordField>
                     <TextField fx:id="showPasswordText" alignment="CENTER" managed="false" prefHeight="40.0" prefWidth="300.0" promptText="PASSWORD" styleClass="inputField">
                        <font>
                           <Font size="15.0" />
                        </font>
                        <HBox.margin>
                           <Insets top="15.0" />
