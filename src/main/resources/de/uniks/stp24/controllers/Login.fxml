                     <Insets top="6.0" />
                  </VBox.margin>
               </ImageView>
               <VBox alignment="CENTER" prefHeight="160.0" prefWidth="100.0">
                  <HBox alignment="CENTER" prefHeight="500.0" prefWidth="35.0" spacing="5.0">
                     <TextField fx:id="usernameInput" alignment="CENTER" prefHeight="40.0" prefWidth="300.0" promptText="%username" styleClass="inputField">
