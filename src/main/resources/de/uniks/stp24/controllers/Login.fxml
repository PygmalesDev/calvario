<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="backgroundAnchorPane" prefHeight="860.0" prefWidth="1280.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stp24.controllers.LoginController">
   <HBox alignment="CENTER" prefHeight="860.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="670.0" prefWidth="923.0" styleClass="registerBackground">
         <VBox prefHeight="200.0" prefWidth="550.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox fx:id="cardBackgroundVBox" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="721.0">
               <VBox>
                  <children>
                     <ToggleButton fx:id="enToggleButton" onAction="#setEn" prefHeight="60.0" prefWidth="60.0" styleClass="languageButton_en">
                        <toggleGroup>
                           <ToggleGroup fx:id="group" />
                        </toggleGroup>
                     </ToggleButton>
                     <ToggleButton fx:id="deToggleButton" onAction="#setDe" prefHeight="60.0" prefWidth="60.0" styleClass="languageButton_de" toggleGroup="$group" />
                  </children>
               </VBox>
               <VBox alignment="CENTER" prefHeight="160.0" prefWidth="100.0">
                  <HBox alignment="CENTER" prefHeight="500.0" prefWidth="35.0" spacing="5.0">
                     <Pane>
                        <TextField fx:id="usernameInput" alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="300.0" promptText="%username" styleClass="textField">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="passwordInput" alignment="CENTER" layoutX="14.0" layoutY="79.0" prefHeight="40.0" prefWidth="300.0" promptText="%password" styleClass="textField">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </PasswordField>
                        <TextField fx:id="showPasswordText" alignment="CENTER" layoutX="14.0" layoutY="79.0" managed="false" prefHeight="40.0" prefWidth="300.0" promptText="%password" styleClass="textField">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <ToggleButton fx:id="showPasswordToggleButton" layoutX="324.0" layoutY="87.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="eyeButton" />
                     </Pane>
                  </HBox>
               </VBox>
               <HBox alignment="BOTTOM_CENTER" prefHeight="250.0" prefWidth="550.0">
                  <VBox alignment="CENTER" prefHeight="250.0" prefWidth="350.0">
                     <Text fx:id="errorLabel" strokeType="OUTSIDE" strokeWidth="0.0">
                        <font>
                           <Font size="15.0" />
                        </font>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Text>
                     <CheckBox fx:id="rememberMeBox" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="rememberMe" text="%remember.me">
                        <font>
                           <Font size="17.0" />
                        </font>
                        <padding>
                           <Insets bottom="6.0" left="30.0" />
                        </padding>
                     </CheckBox>
                     <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="250.0" styleClass="confirmButton" text="%login">
                        <font>
                           <Font size="15.0" />
                        </font>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Button>
                     <Button fx:id="signupButton" mnemonicParsing="false" onAction="#signup" prefHeight="40.0" prefWidth="250.0" styleClass="signupButton" text="%register">
                        <font>
                           <Font size="15.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="15.0" />
                        </VBox.margin>
                     </Button>
                     <Button fx:id="licensesButton" alignment="CENTER" mnemonicParsing="false" onAction="#showLicenses" prefHeight="40.0" prefWidth="100.0" styleClass="licensesButton" text="%licenses">
                        <font>
                           <Font size="15.0" />
                        </font>
                     </Button>
                  </VBox>
                  <Pane fx:id="captainContainer" prefHeight="0.0" prefWidth="0.0" />
                  <padding>
                     <Insets bottom="5.0" />
                  </padding>
               </HBox>
            </VBox>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%calvario.login">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
         </VBox>
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
      </AnchorPane>
   </HBox>
   <stylesheets>
      <URL value="@../style/register.css" />
      <URL value="@../style/styles.css" />
   </stylesheets>
</AnchorPane>
